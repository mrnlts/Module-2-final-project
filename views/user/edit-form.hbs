<div class="update_page_container">
  <div class="update_page_nav">
    <a href="/user/profile">Back</a> <span> | </span>
    <form action="/auth/logout" method="post">
      <input type="submit" value="Log out" class="generic_btn"></input>
    </form>
  </div>
  <h1>Edit user</h1>
<div class="update_page_form_container">
  <form class="update_page_form" action="/user/profile/edit" method="POST">
    <label for="firstName">First Name: </label>
     <br>
    <input type="text" required id="firstName" name="firstName" value="{{dbUser.firstName}}">
    <br>

    <label for="lastName">Last Name: </label>
     <br>
    <input type="text" required id="lastName" name="lastName" value="{{dbUser.lastName}}">
    <br>

    <label for="city">City: </label>
     <br>
    <input type="text" required id="city" name="city" value="{{dbUser.city}}">
    <br>

    <label for="age">Age: </label>
     <br>
    <input type="number" required id="age" name="age" value="{{dbUser.age}}">
    <br>

    <label for="input-email">Email</label>
     <br>
    <input type="email" required id="input-email" name="email" value="{{dbUser.email}}" />
    </div>
    <br>
    <br>
 <div class="update_page_btns_container">
    <button type="submit" class="update_page_save_btn">Save changes</button>
  </form>

  <form action="/user/delete" method="POST">
    <input type="submit" value="Delete my account" class="update_page_delete_btn">
  </form>
</div>
</div> 