<div class="update_page_container">
  <div class="update_page_nav">
    <a href="/user/profile">Back</a> <span> | </span>
    <form action="/auth/logout" method="post">
      <input type="submit" value="Log out" class="generic_btn"></input>
    </form>
  </div>
  <h1 style="text-align: center;">Edit user</h1>

  <form action="/user/profile/edit" method="POST">
    <label for="firstName">First Name: </label>
    <input type="text" id="firstName" name="firstName" value="{{dbUser.firstName}}">
    <br>

    <label for="lastName">Last Name: </label>
    <input type="text" id="lastName" name="lastName" value="{{dbUser.lastName}}">
    <br>

    <label for="city">City: </label>
    <input type="text" id="city" name="city" value="{{dbUser.city}}">
    <br>

    <label for="age">Age: </label>
    <input type="number" id="age" name="age" value="{{dbUser.age}}">
    <br>

    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" value="{{dbUser.email}}" />
    <br>
    <br>

    <button type="submit" class="update_page_save_btn">Save changes</button>
  </form>

  <form action="/user/delete" method="POST">
    <input type="submit" value="Delete my account" class="update_page_delete_btn">
  </form>
</div>