<h1>Edit customer</h1>
<div id="edit">
  <h2>Create user</h2>
  <form action="/customer/{{dbCustomers.id}}/edit" method="POST">
    <label for="firstName">First Name: </label>
    <input type="text" id="firstName" name="firstName" placeholder="Your first name">
    <label for="lastName">Last Name: </label>
    <input type="text" id="last" name="last" placeholder="Your last name">
    <label for="city">City: </label>
    <input type="text" id="city" name="city" placeholder="Your city">
    <label for="age">Age: </label>
    <input type="number" id="age" name="age" placeholder="Your age">
    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" placeholder="Your email" />
    <label for="password">Password</label>
    <input type="password" id="password" name="password" placeholder="**********">
    <button type="submit">Save changes</button>
  </form>

</div>