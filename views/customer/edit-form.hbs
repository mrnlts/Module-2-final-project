<h1>Edit customer</h1>
<div id="edit">
  <h2>Edit user</h2>
  <form action="/customer/{{dbCustomer.id}}/edit" method="POST">

    <label for="firstName">First Name: </label>
    <input type="text" id="firstName" name="firstName" value="{{dbCustomer.firstName}}">
    <label for="lastName">Last Name: </label>
    <input type="text" id="lastName" name="lastName" value="{{dbCustomer.lastName}}">
    <label for="city">City: </label>
    <input type="text" id="city" name="city" value="{{dbCustomer.city}}">
    <label for="age">Age: </label>
    <input type="number" id="age" name="age" value="{{dbCustomer.age}}">
    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" value="{{dbCustomer.email}}" />
    <label for="password">Password</label>
    <input type="password" id="password" name="password" placeholder="**********">
    <button type="submit">Save changes</button>
  </form>

</div>