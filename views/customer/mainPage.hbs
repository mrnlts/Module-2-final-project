<div style="display: flex; align-items: baseline">
  <a href="/">Back</a> <span> | </span>
  <a href="/customer/{{customerFromDB.id}}/edit"> Update customer data </a>  <span> | </span>
  <form action="/auth/logout" method="post">
      <input type="submit" value="Log out" style="width: 100%; background-color: transparent; border: none; color: #00B7FF; font-size: 1rem"></input>
  </form>
  <button>
  <a href="/customer/{{customerFromDB.id}}">Reload the page</a>
</button>
</div>
{{#if customerFromDB}}
<h1>Welcome, {{ customerFromDB.firstName }}!</h1>
<h2>This is your profile page my friend!</h2>

{{else}}
<p>Still no logged in user, sorry!</p>
{{/if}}

<h2 style="text-align: center;">Businesses near you</h2>
<div id="list">
    {{#each businessesFromDB}}
    <div id="business">
        <h1>{{this.businessName}}</h1>
        <h2>Type: {{this.businessType}}</h2>
        <h2>City: {{this.city}}</h2>
    </div>
    {{/each}}
</div>

<h2 style="text-align: center;">Offers</h2>
<div id="list">
    {{#each productsFromDB}}   
    <div id="business">
        <h1> {{this.description}}</h1>
        <h2>Price: {{this.price}}</h2>
        <form action="/order" method= "POST" > 
          <input style="display: none" value="{{this._id}}" id="order" name="order">
          <input style="display: none" value="{{customerFromDB.id}}" id="customer" name="customer" >
          <button type= "submit" style="width: 100%">Order Product</button>
        </form>
    </div>    
      {{/each}}
</div>