
<h1>Customer home page</h1>

<a href="/">Back</a>

<a href="/customer/{{customerFromDB.id}}/edit"> Update customer data </a>


{{#if customerFromDB}}
<h2>Welcome, {{ customerFromDB.firstName }}!</h2>
<p>This is your profile page my friend!</p>
<button>
  <a href="/customer/{{customerFromDB.id}}">Reload the page</a>
</button>
{{else}}
<p>Still no logged in user, sorry!</p>
{{/if}}

<form action="/auth/logout" method="post">
    <button type="submit">Log out</button>
</form>


<div id="list">
    {{#each businessesFromDB}}
    <div id="business">
        <h1>{{this.businessName}}</h1>
        <h2>Type: {{this.businessType}}</h2>
        <h2>City: {{this.city}}</h2>
    </div>
    {{/each}}
</div>