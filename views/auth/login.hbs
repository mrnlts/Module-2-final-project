<div class="login_signup_container">
  
  <div class= "login_signup_container__form">
  <nav class="login_signup_nav">
    <a href="/">Back</a> 
  </nav>
    <h2>Log into your account</h2>
    <form class="login_signup_form" action="/auth/login" method="POST">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="Your email">
      <br>
      <label for="password">Password</label>
      <input type="password" id="password" name="password" placeholder="Your password">
      <br>

      <button class="login_signup_btn" type="submit">Login</button>
    </form>
    
    {{#if errorMessage}} 
     <div class= "flash_message_login">   
       {{#each errorMessage}} 
          {{this}}           
     {{/each}}   
       </div>   
    {{/if}}    
  </div>
</div>

