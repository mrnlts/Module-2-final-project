<div class="business_orders_page_item">
   <h4 class="content_card_title">New order!</h4>
   <p class="content_card_user">User: {{this.user.firstName}}</p>
   <p class="content_card_product">Products:</p>
   <ul>
      {{#each this.products}}
         <li>{{this.item.description}}</li>
      {{/each}}
   </ul>
   <p class="content_card_product">Status: {{this.status}}</p>
   <form action="/orders/{{this._id}}/delivered" method="POST">
      <input class="busines_orders_btn" type="submit" value="Mark as delivered">
   </form>
</div> 