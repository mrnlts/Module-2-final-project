<div class="orders_page_container">
    <nav class="orders_page_nav">
        <a href="/business/profile">Back</a>
        <form action="/auth/logout" method="post">
            <input type="submit" value="Log out" class="green_btn"></input>
        </form>
    </nav>

    <h2 style="text-align: center;">Current orders: </h2>
    {{#if dbOrders}}
        <div class="orders_page_item">
            {{#each dbOrders}}
                <div id="business">
                    <h2>New order!</h2>
                    <p>Order ID: {{this._id}}</p>
                    <p>User: {{this.user.firstName}}</p>
                    <p>Product: {{this.product.description}}</p>
                </div>
            {{/each}}
        </div>
        {{else}}
        <p>There are no orders at the moment!</p>
    {{/if}}
</div>