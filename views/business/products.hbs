    <a href="/business/profile">Back</a>
    <form action="/auth/logout" method="post">
        <input type="submit" value="Log out" style="width: 100%; background-color: transparent; border: none; color: #00B7FF; font-size: 1rem"></input>
    </form>

    <button><a href="/business/add-product">Add new product</a></button>

    <h2 style="text-align: center;">Current products: </h2>
    {{#if dbProducts}}
        <div id="list">
            {{#each dbProducts}}
                <div id="business">
                    <h2>{{this.description}}</h2>
                    <p>Price: {{this.price}}</p>
                </div>
            {{/each}}
        </div>
        {{else}}
        <p>There are no products at the moment!</p>
    {{/if}}