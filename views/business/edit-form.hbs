<div class="update_page_container">
  <nav class="update_page_nav">
    <a href="/business/profile">Back</a>   <span> | </span>
        <form action="/auth/logout" method="post">
        <input type="submit" value="Log out" class="logout_btn"></input>
    </form>
  </nav>
  <h1>Edit Business</h1>
  <form action="/business/profile/edit" method="POST">
    <label for="businessName">Business Name: </label>
    <input type="text" id="businessName" name="businessName" value="{{dbBusiness.businessName}}">
    <br>
    <label for="businessType">Business type</label>
        <select name="businessType" id="businessType">
            <option value="Pizza">Pizza</option>
            <option value="Chinese">Chinese</option>
            <option value="Sushi">Sushi</option>
            <option value="Italian">Italian</option>
            <option value="Japanese">Japanese</option>
            <option value="Thai">Thai</option>
            <option value="Vietnamese">Vietnamese</option>
            <option value="Tapas">Tapas</option>
            <option value="Mexican">Mexican</option>
            <option value="Mediterranean">Mediterranean</option>
            <option value="Gourmet">Gourmet</option>
            <option value="French">French</option>
            <option value="Hamburger">Hamburger</option>
            <option value="Kebab">Kebab</option>
            <option value="FastFood">FastFood</option>
            <option value="Vegan">Vegan</option>
            <option value="Vegetarian">Vegetarian</option>
        </select>
    <br>
    <label for="city">City: </label>
    <input type="text" id="city" name="city" value="{{dbBusiness.city}}">
    <br>
    <br>
    <button type="submit" class="update_page_save_btn">Save changes</button>
  </form>

<form action="/business/delete" method="POST">
  <input type="submit" value="Delete my business" class="update_page_delete_btn">
</form>

</div>