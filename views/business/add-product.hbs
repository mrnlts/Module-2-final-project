<div id="add-product">
      <a href="/business/products">Back</a> 
    <h1>Add a new product</h1>
   
    <form action="/business/add-product" method="post">
        <label for="price">Price</label>
        <input type="number" name="price" id="price" placeholder="Your product's price">
        <label for="description">Description</label>
        <input type="text" name="description" id="description" placeholder="Your product's description">
        <div class="image_upload_form">
            <label for="image-input">Add image:</label>
            <input type="file" name="image" id="image-input" class="form-control-file" />
        </div>
        <button type="submit">Add product</button>
    </form>
</div>